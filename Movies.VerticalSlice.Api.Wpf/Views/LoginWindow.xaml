<Window x:Class="Movies.VerticalSlice.Api.Wpf.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="Email:" />
        <TextBox x:Name="EmailBox" Margin="0,0,0,10"/>
        <TextBlock Text="Password:" />
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
        <TextBlock x:Name="ErrorText" Foreground="Red" Margin="0,0,0,10"/>
        <Button Content="Login" Click="Login_Click"/>
    </StackPanel>
</Window>